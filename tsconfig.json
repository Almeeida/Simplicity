{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@data/*": ["../data/*"],
      "@root": ["."],
      "@src": ["*"],
      "@util/*": ["util/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "data",
    "node_modules"
  ]
}
