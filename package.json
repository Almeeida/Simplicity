{
  "name": "simplicity",
  "version": "1.0.0",
  "author": "Simplicity Team",
  "contributors": [
    "Almeida <almeida@pm.me> (almeida.js.org)",
    "Tsugami"
  ],
  "description": "Multipurpose Discord bot.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build tsconfig.json",
    "start": "yarn build && cross-env NODE_ENV=production node .",
    "dev": "tsnd --ignore-watch node_modules --respawn --transpileOnly --watch src,.env --no-notify src/index.ts",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --fix --ext ts"
  },
  "license": "ISC",
  "dependencies": {
    "bufferutil": "^4.0.1",
    "canvas": "^2.6.1",
    "cross-env": "^7.0.2",
    "date-fns": "^2.14.0",
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0",
    "i18next": "^19.4.0",
    "i18next-node-fs-backend": "^2.1.3",
    "mongoose": "^5.9.17",
    "node-fetch": "^2.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.9",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Simplicity/Simplicity.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --ext ts"
    ]
  }
}
