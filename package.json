{
  "name": "simplicity",
  "author": "Almeida <almeida@dbm-network.org> (http://almeida.glitch.me) | Tsugami",
  "description": "Yet another Discord bot.",
  "main": "src/app.js",
  "license": "ISC",
  "scripts": {
    "start": "node .",
    "dev": "nodemon . --inspect --watch src --watch .env",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest"
  },
  "dependencies": {
    "discord.js": "github:discordjs/discord.js#master",
    "dotenv": "^7.0.0",
    "i18next": "^15.0.9",
    "i18next-node-fs-backend": "^2.1.3",
    "module-alias": "^2.2.2",
    "moment": "^2.23.0",
    "moment-duration-format": "^2.3.2",
    "mongoose": "^5.7.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Almeeida/Simplicity.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@root": "src",
    "@database": "src/database",
    "@commands": "src/commands",
    "@structures": "src/structures",
    "@utils": "src/utils",
    "@parameters": "src/structures/command/parameters/types",
    "@loaders": "src/loaders",
    "@command": "src/structures/command",
    "@discord": "src/structures/discord",
    "@locales": "src/locales",
    "@listeners": "src/listeners"
  }
}
